<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"

    tools:context=".ui.controllers.activities.loginSignupPackage.ChangePasswordActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_toolbar" />

    <View
        android:id="@+id/v"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/toolbar"
        android:background="@drawable/toolbar_dropshadow" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgLogo"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@+id/v"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/ic_logo_orange" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgLogo"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/rlForgotPassEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/btnFacebookLogin"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/text_20"
            android:layout_marginRight="15dp"
            app:cardCornerRadius="4dp">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtForgotEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@null"
                android:hint="Old Password"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textSize="14sp" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/btnFacebookLogin"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/text_20"
            android:layout_marginRight="15dp"
            app:cardCornerRadius="4dp">

            <androidx.appcompat.widget.AppCompatEditText

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@null"
                android:hint="New Password"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textSize="14sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/btnFacebookLogin"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/text_20"
            android:layout_marginRight="15dp"
            app:cardCornerRadius="4dp">

            <androidx.appcompat.widget.AppCompatEditText

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@null"
                android:hint="Confirm New Password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textSize="14sp" />
        </androidx.cardview.widget.CardView>




        <Button
            android:id="@+id/btnChangePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="@dimen/text_20"
            android:background="@drawable/green_curved_background"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/cairo_bold"
            app:fontFamily="@font/cairo_bold" />
    </LinearLayout>
</RelativeLayout>