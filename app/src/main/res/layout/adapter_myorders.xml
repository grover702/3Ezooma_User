<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_5dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="@dimen/dimen_5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_5dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgFood"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/food_one" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtProviderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_5dp"
            android:layout_toEndOf="@+id/imgFood"
            android:text="Mama's Kitchen"
            android:textColor="@color/black"
            android:textSize="@dimen/text_18sp"
            android:includeFontPadding="false"
            android:lineSpacingExtra="@dimen/dimen_0dp"
            android:fontFamily="@font/cairo_bold"
            app:fontFamily="@font/cairo_bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtProviderLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtProviderName"
            android:layout_marginStart="@dimen/dimen_5dp"
            android:layout_toEndOf="@+id/imgFood"
            android:text="Lorem Ipsum is simply dummy text"
            android:textColor="@color/description"
            android:textSize="@dimen/text_14sp"
            app:fontFamily="@font/roboto_regular"
            android:fontFamily="@font/roboto_regular"/>

        <View
            android:id="@+id/v"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/imgFood"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@color/very_lighter_gray" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:text="ITEMS"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/text_12sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtItemsDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtItems"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:text="1 x Super Veg Wrap, 2 x Veg Jumbo King Burger"
            android:textColor="@color/black"
            android:textSize="@dimen/text_12sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtItemsOrderedOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtItemsDetail"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:text="ORDERED ON"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/text_12sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtItemsOrderedOnDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtItemsOrderedOn"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:text="Jan 15,2019 at 03:06pm"
            android:textColor="@color/black"
            android:textSize="@dimen/text_12sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtItemsTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtItemsOrderedOnDetail"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:text="TOTAL"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/text_12sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtItemsTotalDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtItemsTotal"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:text="EGP 250"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_12sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>